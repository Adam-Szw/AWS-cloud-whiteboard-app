package application;

import java.io.IOException;

public class StateSender implements Runnable {

	public String toPost = "";
	
	Comms comms;
	
	public StateSender(Comms comms) {
		this.comms = comms;
	}
	
	void postState() throws IOException {
		comms.dout.writeUTF(toPost);
		comms.dout.flush();
		
		String str = comms.din.readUTF();
		if(str.equals("ack")) {
			System.out.println("Server accepted state change");
			toPost = "";
		}
		else {
			System.out.println("Unknown server message");
		}
	}
	
	@Override
	public void run() {
		
		while(true) {
			try {
				if(toPost.equals("")) {
					Thread.sleep(10);
				} else {
					postState();
				}
			} catch(Exception e){ System.out.println(e); }
		}
	}

}
